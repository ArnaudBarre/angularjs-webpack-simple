{
  "name": "angularjs-webpack-simple",
  "description": "A simple boilerplate for AngularJS using webpack and components",
  "version": "0.0.11",
  "author": "Arnaud Barr√© <arnaudbarremn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack --mode production",
    "test": "jest",
    "e2e": "npm run build && jest -c e2e.config.js --runInBand",
    "e2e:debug": "debug=true npm run e2e",
    "lint": "eslint ./src *.config.js ./e2e"
  },
  "dependencies": {
    "angular": "^1.6.9",
    "angular-route": "^1.6.9",
    "babel-polyfill": "^6.26.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "useBuiltIns": true
        }
      ]
    ],
    "plugins": [
      "angularjs-annotate"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^23.0.0-alpha.5r",
    "babel-loader": "^7.1.4",
    "babel-plugin-angularjs-annotate": "^0.8.2",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.15.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "jest": "^22.4.3",
    "jest-puppeteer-preset": "^2.3.0",
    "puppeteer": "^1.2.0",
    "serve": "^6.5.5",
    "style-loader": "^0.20.3",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg|css|html)$": "<rootDir>//__mocks__/asset.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "page": true
    }
  },
  "engines": {
    "node": ">=7.6.0"
  }
}
