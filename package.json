{
  "name": "angularjs-webpack-simple",
  "description": "A simple boilerplate for angularjs using webapck and components",
  "version": "0.0.2",
  "author": "Arnaud Barr√© <arnaudbarremn@gamail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack --mode production",
    "lint": "eslint --fix ./src"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.15",
    "angular": "^1.6.9",
    "bootstrap": "^4.0.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "angularjs-annotate"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-angularjs-annotate": "^0.8.2",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "file-loader": "^1.1.10",
    "html-loader": "^0.5.5",
    "style-loader": "^0.20.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9",
    "webpack-dev-server": "^3.1.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "$scope",
            "$rootScope"
          ]
        }
      ]
    }
  }
}