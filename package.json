{
  "name": "angularjs-webpack-simple",
  "description": "A simple boilerplate for angularjs using webapck and components",
  "version": "0.0.6",
  "author": "Arnaud Barr√© <arnaudbarremn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack --mode production",
    "test": "jest",
    "e2e": "jest -c e2e.config.js --runInBand",
    "serve": "serve -p 8080 --single",
    "lint": "eslint ./src *.config.js ./e2e"
  },
  "dependencies": {
    "angular": "^1.6.9",
    "angular-route": "^1.6.9"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "angularjs-annotate"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-angularjs-annotate": "^0.8.2",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.14.1",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "jest": "^22.4.2",
    "jest-puppeteer-preset": "^2.0.1",
    "puppeteer": "^1.1.1",
    "serve": "^6.5.3",
    "style-loader": "^0.20.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "page": true
    },
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "$scope",
            "$rootScope"
          ]
        }
      ]
    }
  },
  "engines": {
    "node": ">=7.6.0"
  }
}